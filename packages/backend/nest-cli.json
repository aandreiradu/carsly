{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "config.*.yaml",
      "assets/**",
      "uploads/**",
      {
        "include": "./src/common/seed",
        "outDir": "dist/common/seed",
        "watchAssets": true
      }
    ]
  }
}