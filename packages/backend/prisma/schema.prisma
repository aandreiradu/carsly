generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  email        String   @unique
  password     String
  firstName    String?
  lastName     String?
  refreshToken String?

  Ad Ad[]

  @@map("users")
}

model CarBrand {
  id          String     @id @default(uuid())
  name        String     @unique
  description String?
  logoUrl     String?
  yearOfEst   DateTime?
  CarModel    CarModel[]
  Ad          Ad[]

  @@map("cars_brand")
}

model AdImage {
  id   String @id @default(uuid())
  path String

  Ad   Ad     @relation(fields: [adId], references: [id])
  adId String

  @@map("image")
}

model CarModel {
  id   String @id @default(uuid())
  name String

  brand   CarBrand @relation(fields: [brandId], references: [id])
  brandId String

  bodyType VehicleBodyType

  Ad Ad[]

  @@map("cars_model")
}

model Ad {
  id String @id @default(uuid())

  isDamaged        Boolean? @default(false)
  isRightHandDrive Boolean? @default(false)
  isImported       Boolean? @default(false)

  VIN                 String
  KM                  Float
  dayOfRegistration   String
  monthOfRegistration String
  yearOfRegistration  String
  year                DateTime

  carBrandId String
  brand      CarBrand @relation(fields: [carBrandId], references: [id])

  carModel   CarModel @relation(fields: [carModelId], references: [id])
  carModelId String

  fuelType       FuelType
  power          Float
  engineSize     Float
  noOfDoors      Int
  gearbox        GearboxTypes
  transmission   TransmissionTypes
  polluationNorm PolluationNormTypes
  co2emissions   Float?
  bodyType       VehicleBodyType
  color          CarsColors
  colorType      ColorTypes
  seats          Int

  images                 AdImage[]
  youtubeVideo           String?
  title                  String
  description            String?
  vehicleOrigin          CountriesTypes
  isFirstOwner           Boolean?       @default(false)
  isWithoutAccident      Boolean?       @default(false)
  isRegistered           Boolean?       @default(false)
  isServiceCardAvailable Boolean?       @default(false)
  isVintageCar           Boolean?       @default(false)
  hasTuning              Boolean?       @default(false)

  price             Float
  currency          CurrencyTypes
  isNegotiable      Boolean?      @default(false)
  isLeasing         Boolean?      @default(false)
  sellerFullName    String
  sellerCity        String
  sellerPhoneNumber String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ad")
}

